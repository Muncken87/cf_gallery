<div class="user-index">
  <div class="container">
    <div class="row">
     <% @user.each do |u| %>
     <h1 class="user-title">Hello  <%= u.first_name %></h1>

      <div class="col-md-4">
        <section class="user-left">
          <div class="user-info">
          <% if u.avatar_url.present? %>
            <%= image_tag u.avatar_url, :class => 'user-img' %>
          <% else %>
          <% end %>
          <h3>First Name</h3>
          <p><%= u.first_name %></h2>
          <h3>Last Name</h3>
          <p><%= u.last_name %></p>
          <h3>Course</h3>
          <p><%= u.course %></p>
          <h3>Age</h3>
          <p><%= u.age %></p>
          <h3>Location</h3>
          <p><%= u.location %></p>
        </div>
        <div class="user-links">
          <p class="user-links-round icon-flow-parallel">
            <a href="<%= u.email %>"><%= u.user_email %></a>
          </p>
          <p class="user-links-round icon-linkedin">
            <a href="<%= u.linkedin_url %>"><%= u.linkedin_url %></a>
          </p>
          <p class="user-links-round icon-behance">
            <a href="<%= u.behance_url %>"><%= u.behance_url %></a>
          </p>
          <p class="user-links-round icon-github">
            <a href="<%= u.github_url %>"><%= u.github_url %></a>
          </p>
          <p class="user-links-round icon-flow-parallel">
            <a href="<%= u.playstore_url %>"><%= u.playstore_url %></a>
          </p>
          <p class="user-links-round icon-twitter">
            <a href="<%= u.twitter_url %>"><%= u.twitter_url %></a>
          </p>
          <p class="user-links-round icon-pinterest">
            <a href="<%= u.pinterest_url %>"><%= u.pinterest_url %></a>
          </p>
      </div>

      </div>

      <div class="col-md-8">
        <section class="user-right">
          <h3>Bio</h3>
          <p><%= u.bio %></p>
          <h3>Skills</h3>
          <p><%= u.skills %></p>
          <%= link_to 'Edit', edit_user_path(@user) %> |
          <%= link_to 'Back', users_path %>
        </section>
      </div>
     <% end %>
   </div>
  </div>
</div>
